<div class="login">
  <div class="container">
    <div class="form">
      <h1>Log In</h1>
      <br></br>
		<p>
			<%= form_for(:session, url: login_path) do |f| %>
			<p style="text-align: center;">
		         <%= f.email_field :email, :placeholder => "Email" %>
		    </p>
		    <p style="text-align: center;">
			    <%= f.password_field :password, :placeholder => "Password" %>
			</p>
			<p style="text-align: center;">
			    <%= f.submit "Login", class: "btn-submit", id: "login_btn" %>
			</p>
	         <% end %>
		</p>
    </div>
   </div>
</div> 
