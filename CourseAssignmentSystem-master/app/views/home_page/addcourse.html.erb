<div class="center jumbotron">
  <h2>Add New Course</h2>
  <br><br>
 

  <%= form_for :class , method: :get, url: addcourse_path do |f| %>
  <p><%= f.label "Course Name" %>
      <%= f.text_field :CourseName %>
  <p><%= f.label "Course Title" %>
      <%= f.text_field :CourseTitle %> 
  </p>
  <p><%= f.label "Course Size" %>
      <%= f.number_field :course_size, in: 20..200, step: 1, min:20 %>
      <%= f.submit "Submit" %>
  </p>
 
  <%= link_to "Back", root_path , class: "btn btn-lg btn-primary" %>
 <% end %>
</div>
